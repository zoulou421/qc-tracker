<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_qctracker_employee_tree" model="ir.ui.view">
        <field name="name">qctracker.employee.tree</field>
        <field name="model">qctracker.employee</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="role"/>
                <field name="department_id"/>
                <field name="is_manager"/>
            </tree>
        </field>
    </record>

    <record id="view_qctracker_employee_form" model="ir.ui.view">
        <field name="name">qctracker.employee.form</field>
        <field name="model">qctracker.employee</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="gender"/>
                            <field name="country_dynamic"/>
                        </group>
                        <group>
                            <field name="role"/>
                            <field name="department_id"/>
                            <field name="is_manager"/>
                            <field name="skill_ids" widget="many2many_tags"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tasks">
                            <field name="task_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="project_id"/>
                                    <field name="deadline"/>
                                    <field name="priority"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Ratings">
                            <field name="rating_employee_ids">
                                <tree>
                                    <field name="rating"/>
                                    <field name="comment"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Projects">
                            <field name="project_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="department_id"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                </tree>
                            </field>
                        </page>
                         <page string="Notifications">
                            <field name="notification_ids">
                                <tree>
                                    <field name="message"/>
                                    <field name="task_id"/>
                                    <field name="notification_date"/>
                                    <field name="read"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_qctracker_employee_kanban" model="ir.ui.view">
        <field name="name">qctracker.employee.kanban</field>
        <field name="model">qctracker.employee</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id" invisible="1"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="oe_partner_heading"><field name="name"/></strong>
                                <ul>
                                    <li>Email: <field name="email"/></li>
                                    <li>Phone: <field name="phone"/></li>
                                    <li>Role: <field name="role"/></li>
                                    <li>Department: <field name="department_id"/></li>
                                    <li>Is Manager: <field name="is_manager"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_qctracker_employee_graph" model="ir.ui.view">
        <field name="name">qctracker.employee.graph</field>
        <field name="model">qctracker.employee</field>
        <field name="arch" type="xml">
            <graph type="pie">
                <field name="role" type="row"/>
            </graph>
        </field>
    </record>

</odoo>