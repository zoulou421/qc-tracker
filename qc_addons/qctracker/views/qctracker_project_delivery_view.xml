            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="project_id" string="🚀 Projet"/>
                            <field name="employee_id" string="🧑‍💼 Manager"/>
                            <field name="on_time" string="⏱️ À Temps"/>
