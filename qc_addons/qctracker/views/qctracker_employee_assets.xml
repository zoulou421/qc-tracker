<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Attach Animate.css to web.assets_common -->
        <template id="qctracker_employee_assets_common" inherit_id="web.assets_common">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
            </xpath>
        </template>

        <!-- Attach SCSS fix and CSS/JS to web.assets_backend -->
        <template id="qctracker_employee_assets_backend" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/qctracker/static/src/css/fix_kanban.scss"/>
                <link rel="stylesheet" href="/qctracker/static/src/css/employee_styles.css"/>
                <script type="text/javascript" src="/qctracker/static/src/js/employee_scripts.js"/>
            </xpath>
        </template>
    </data>
</odoo>