<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="qctracker_employeerating_view_tree" model="ir.ui.view">
            <field name="name">qctracker.employeerating.tree.styled</field>
            <field name="model">qctracker.employeerating</field>
            <field name="arch" type="xml">
                <tree decoration-info="rating &lt; 5" decoration-warning="rating &gt;= 5 and rating &lt; 8" decoration-danger="rating &gt;= 8">
                    <field name="employee_id" string="üë§ Employ√©" widget="many2one_button"/>
                    <field name="project_id" string="üöÄ Projet" widget="many2one_button"/>
                    <field name="rating" string="‚≠ê Note" widget="progressbar" options="{'max_value': 10}"/>
                    <field name="on_time" string="‚è±Ô∏è √Ä l'heure" widget="boolean_toggle"/>
                    <field name="evaluation_date" string="üìÖ Date d'√©valuation" widget="date" options='{"format": "dd/MM/yyyy"}'/>
                    <field name="state" string="üìù Statut" widget="badge" decoration-success="state == 'submitted'" decoration-muted="state == 'draft'"/>
                    <field name="manager_id" string="üíº Manager" widget="many2one_button"/>
                </tree>
            </field>
        </record>

        <record id="qctracker_employeerating_view_form" model="ir.ui.view">
            <field name="name">qctracker.employeerating.form.styled</field>
            <field name="model">qctracker.employeerating</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="employee_id" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="‚ÑπÔ∏è Informations de l'√©valuation" class="oe_title">
                                <field name="employee_id" string="üë§ Employ√©" options="{'no_create_edit': True}"/>
                                <field name="project_id" string="üöÄ Projet" options="{'no_create_edit': True}"/>
                                <field name="rating" string="‚≠ê Note" widget="radio"/>
                                <field name="on_time" string="‚è±Ô∏è √Ä l'heure" widget="boolean_toggle"/>
                                <field name="evaluation_date" string="üìÖ Date d'√©valuation" widget="date" options='{"format": "dd/MM/yyyy"}'/>
                                <field name="state" string="üìù Statut" widget="selection"/>
                                <field name="manager_id" string="üíº Manager" options="{'no_create_edit': True}"/>
                            </group>
                            <group string="üí¨ Commentaires" class="oe_title">
                                <field name="comments" string="üí¨ Commentaires" widget="html"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="qctracker_employeerating_view_kanban" model="ir.ui.view">
            <field name="name">qctracker.employeerating.kanban.styled</field>
            <field name="model">qctracker.employeerating</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id" invisible="1"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open">
                                            <field name="employee_id"/>
                                        </a>
                                    </h4>
                                    <ul>
                                        <li><i class="fa fa-star" style="color: #008000;"></i> ‚≠ê Note: <field name="rating"/></li>
                                        <li><i class="fa fa-clock-o" style="color: #000080;"></i> ‚è±Ô∏è √Ä l'heure: <field name="on_time"/></li>
                                        <li><i class="fa fa-calendar" style="color: #000000;"></i> üìÖ Date: <field name="evaluation_date" widget="date" options='{"format": "dd/MM/yyyy"}'/></li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>