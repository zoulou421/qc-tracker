<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_qctracker_subtask_tree" model="ir.ui.view">
            <field name="name">qctracker.subtask.tree</field>
            <field name="model">qctracker.subtask</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="🏷️ Nom"/>
                    <field name="task_id" string="📌 Tâche"/>
                    <field name="start_date" string="📅 Début"/>
                    <field name="end_date" string="🏁 Fin"/>
                    <field name="status" string="🚦 Statut"/>
                </tree>
            </field>
        </record>

        <record id="view_qctracker_subtask_form" model="ir.ui.view">
            <field name="name">qctracker.subtask.form</field>
            <field name="model">qctracker.subtask</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" string="🏷️ Nom"/>
                            <field name="task_id" string="📌 Tâche"/>
                            <field name="employee_id" string="🧑‍💼 Employé"/>
                            <field name="start_date" string="📅 Début"/>
                            <field name="end_date" string="🏁 Fin"/>
                            <field name="status" string="🚦 Statut"/>
                        </group>
                        <field name="description" string="📝 Description"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_qctracker_subtask" model="ir.actions.act_window">
            <field name="name">Sous-Tâches 🧩</field>
            <field name="res_model">qctracker.subtask</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
        </record>

        <menuitem id="menu_qctracker_subtask" name="Sous-Tâches 🧩" parent="menu_qctracker_root" action="action_qctracker_subtask" sequence="70"/>
    </data>
</odoo>